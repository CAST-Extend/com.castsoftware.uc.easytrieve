<?xml version="1.0" encoding="iso-8859-1"?>

<languagePattern id="Easytrieve">
	<comment>
		<begin><![CDATA[\*]]></begin>
		<end><![CDATA[\r\n]]></end>
		<multiline>false</multiline>
	</comment>	
	
	
	<esql>
	<begin><![CDATA[BEGIN_PROGRAM]]></begin>
		<end><![CDATA[END_PROGRAM]]></end>
	</esql>

	
	<keyword>FILE</keyword>
	<keyword>PROC</keyword>
	<keyword>MACRO</keyword>
	<keyword>JOB</keyword>
	<keyword>INPUT</keyword>
	<keyword>SORT</keyword>
	<keyword>PRINT</keyword>
	<keyword>KEY</keyword>
	<keyword>REPORT</keyword>
    <keyword>START</keyword>
    <keyword>FINISH</keyword>
	
	<types>
		<Eztprogram>
			<header>
				<pattern><![CDATA[BEGIN_PROGRAM[(]]]></pattern>
			</header>
			<identification.name>	
				<pattern><![CDATA[BEGIN_PROGRAM[(]]]></pattern>
				<value><![CDATA[.*?(?:(?=\)))]]></value>
			</identification.name>
			<body>
				<begin><![CDATA[[)]]]></begin>
				<end><![CDATA[END_PROGRAM]]></end>
				<nested>false</nested>
			</body>
		</Eztprogram>

		<Easymacro>
			<header>
				<pattern><![CDATA[BEGIN_MACRO[(]]]></pattern>
			</header>
			<identification.name>	
				<pattern><![CDATA[BEGIN_MACRO[(]]]></pattern>
				<value><![CDATA[.*?(?:(?=\)))]]></value>
			</identification.name>
			<body>
				<begin><![CDATA[[)]]]></begin>
				<end><![CDATA[END_MACRO]]></end>
				<nested>false</nested>
			</body>		
			<!--<header>
				 <pattern><![CDATA[(^| |\t)\%]]></pattern>
			</header>
			<identification.name>
				<pattern><![CDATA[\%]]></pattern>
				<value><![CDATA[[A-Z]([a-z]|[A-Z]|[0-9])*]]></value>
			</identification.name>
			<endwithoutbody><![CDATA[[[:space:]]]]></endwithoutbody> -->
		</Easymacro>		
	
		<Easyfile>
			<header>
				 <pattern><![CDATA[(^| |\t)[Ff][Ii][Ll][Ee]([[:space:]]|[+]|[-])+[[:word:]£\#\$\@\&\-]*]]></pattern>
			</header>
			<identification.name>
				<pattern><![CDATA[[Ff][Ii][Ll][Ee]([[:space:]]|[+]|[-])]]></pattern>
				<value><![CDATA[[[:word:]\#\&@\$\-]+]]></value>
			</identification.name>
			<endwithoutbody><![CDATA[$]]></endwithoutbody>
			<body>
				<begin><![CDATA[$]]></begin>
				<end><![CDATA[[ ]|[\t]||[END]]]></end>
				<nested>true</nested>
			</body>
		</Easyfile>

		<Easyreport>
			<header>
				 <pattern><![CDATA[^[ | |\t]*[Rr][Ee][Pp][Oo][Rr][tT]([[:space:]]|[+]|[-])+[[:word:]£\#\$\@\&\-]*]]></pattern>
			</header>
			<identification.name>
				<pattern><![CDATA[[Rr][Ee][Pp][Oo][Rr][tT]([[:space:]]|[+]|[-])]]></pattern>
				<value><![CDATA[[[:word:]\#\&@\$\-]+]]></value>
			</identification.name>
			<endwithoutbody><![CDATA[$]]></endwithoutbody>
			<body>
				<begin><![CDATA[$]]></begin>
				<end><![CDATA[[ ]|[\t]|[[Ee][Nn][Dd]]]]></end>
				<nested>true</nested>
			</body>
		</Easyreport>		
		
		<Easyproc>
			<header>
				 <pattern><![CDATA[(^| |\t)[Pp][Rr][Oo][Cc]([\.]|[[:space:]])+]]></pattern>
			</header>
			<identification.name>
				<pattern><![CDATA[([Pp][Rr][Oo][Cc])[[[:space:]]|[\.]]]></pattern>
				<value><![CDATA[[[:word:]\#\&@\$\-]+]]><backward/></value>
			</identification.name>

			<body>
				<begin><![CDATA[[ ]|[\r\n]|[\t]]]></begin>
				<end><![CDATA[[END-PROC]]]></end>			
				<nested>true</nested>
			</body>
		</Easyproc>
		
	
	</types>

	<links>
        <callLink>
		 <!-- PERFORM Procedure Link -->
				<pattern><![CDATA[[pP][eE][rR][fF][oO][rR][mM][[:blank:]]+]]></pattern>
				<callee><![CDATA[[[:word:]\#\&@\$\-\.]+]]></callee>
        </callLink>
		
		<!-- START Procedure Link -->
						
        <callLink>
				<pattern><![CDATA[[sS][tT][aA][rR][tT][(]+]]></pattern>
				<callee><![CDATA[[[:word:]\#\&@\$\-\.]+]]></callee>
        </callLink>

		 <!-- FINISH Procedure Link -->

        <callLink>
				<pattern><![CDATA[[fF][iI][nN][iI][sS][hH][(]*]]></pattern>
				<callee><![CDATA[[[:word:]\#\&@\$\-\.]+]]></callee>
        </callLink>		

		 <!-- READ/GET FILE Link -->
		
		<accessReadLink>
				<pattern><![CDATA[(^| |\t)([Gg][Ee][Tt])([[:space:]]|[+]|[-])+]]></pattern>
				<callee><![CDATA[[[:word:]\#\&@\$\-\.]+]]></callee>
		</accessReadLink>
		
		 <!-- JOB INPUT FILE Link -->

		<accessReadLink>
				<pattern><![CDATA[(^| |\t)([Jj][Oo][Bb])([+]|[-]|[[:space:]])([Ii][Nn][Pp][Uu][Tt])([[:space:]]|[\+]|[\-]|[\(])+]]></pattern>
				<callee><![CDATA[[[:word:]\#\&@\$\-\.]+]]></callee>
		</accessReadLink>
		
		<!-- JOB INPUT FILE Matching -->
		<!--
		<accessReadLink>
				<pattern><![CDATA[(^| |\t)([Jj][Oo][Bb])([+]|[-]|[[:space:]])([Ii][Nn][Pp][Uu][Tt][[:space:]][\(])+]]></pattern>
				<callee><![CDATA[[[:word:]\#\&@\$\-\.]+]]></callee>
		</accessReadLink>
		-->
		<accessReadLink>
				<pattern><![CDATA[([[:space:]]|[+]|[-])([Kk][Ee][Yy][[:space:]])+]]></pattern>
				<callee><![CDATA[[[:word:]\#\&@\$\-\.]+]]><backward/></callee>
		</accessReadLink>
		
		 <!-- WRITE FILE Link -->
	
		<accessWriteLink>
				<pattern><![CDATA[(^| |\t)([Ww][Rr][Ii][Tt][Ee])([[:space:]]|[+]|[-])+]]></pattern>
				<callee><![CDATA[[[:word:]\#\&@\$\-\.]+]]></callee>
		</accessWriteLink>

		<!-- PRINT REPORT Link -->

		<accessWriteLink>
				<pattern><![CDATA[(^| |\t)[Pp][Rr][Ii][Nn][Tt]([[:space:]]|[+]|[-])+]]></pattern>
				<callee><![CDATA[[[:word:]\#\&@\$\-\.]+]]></callee>
		</accessWriteLink>
		
		<!-- PUT FILE Link -->

		<accessWriteLink>
				<pattern><![CDATA[(^| |\t)[Pp][Uu][Tt]([[:space:]]|[+]|[-])+]]></pattern>
				<callee><![CDATA[[[:word:]\#\&@\$\-\.]+]]></callee>
		</accessWriteLink>

		<!-- SORT INPUT FILE Link -->
		
		<accessReadLink>
				<pattern><![CDATA[(^| |\t)([Ss][Oo][Rr][Tt])([[:space:]]|[+]|[-])+]]></pattern>
				<callee><![CDATA[[[:word:]\#\&@\$\-\.]+]]></callee>
		</accessReadLink>

		<!-- SORT INPUT FILE to Output Link -->
		
		<accessWriteLink>
				<pattern><![CDATA[\b[Ss][Oo][Rr][Tt]\b(\s|[+]|[-])+[[:word:]#$@\-]+(\s|[+]|[-])+\b[Tt][Oo]\b(\s|[+]|[-])+]]></pattern>
				<callee><![CDATA[[[:word:]#$@ \-]+]]></callee>
		</accessWriteLink>

		<!--Include Macro Link -->
		
		<includeLink>
				<pattern><![CDATA[(^| |\t)\%]]></pattern>
				<callee><![CDATA[[[:word:]#$@ \-]+]]></callee>
		</includeLink>
		
	</links>

		
</languagePattern>
